# Editor configuration aligned with math-worksheet conventions
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{ts,tsx,js,jsx,json,css,scss,pcss,yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
